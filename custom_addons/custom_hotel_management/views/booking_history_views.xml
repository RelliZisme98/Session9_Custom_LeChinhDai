<odoo>
    <record id="view_booking_history_list" model="ir.ui.view">
        <field name="name">hotel.booking.history.list</field>
        <field name="model">hotel.booking.history</field>
        <field name="arch" type="xml">
            <list string="Lịch sử đặt phòng">
                <field name="customer_name"/>
                <field name="hotel_id"/>
                <field name="room_id"/>
                <field name="check_in_date"/>
                <field name="check_out_date"/>
            </list>
        </field>
    </record>

    <record id="view_booking_history_form" model="ir.ui.view">
        <field name="name">hotel.booking.history.form</field>
        <field name="model">hotel.booking.history</field>
        <field name="arch" type="xml">
            <form string="Lịch sử đặt phòng">
                <group>
                    <field name="customer_name"/>
                    <field name="hotel_id"/>
                    <field name="room_id"/>
                    <field name="check_in_date"/>
                    <field name="check_out_date"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
