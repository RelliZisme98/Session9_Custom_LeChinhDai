<odoo>
    <!-- Report Wizard View -->
    <record id="view_hotel_report_wizard_form" model="ir.ui.view">
        <field name="name">hotel.report.wizard.form</field>
        <field name="model">hotel.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="report_type"/>
                </group>
                <footer>
                    <button name="action_generate_report" string="Generate" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>