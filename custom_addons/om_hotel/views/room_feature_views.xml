<odoo>
    <record id="action_hotel_management_room_features" model="ir.actions.act_window">
        <field name="name">Room Features</field>
        <field name="res_model">hotel.management.room.feature</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>
                Manage the features of rooms such as views, windows, and special attributes.
            </p>
        </field>
    </record>

    <record id="view_room_feature_list" model="ir.ui.view">
        <field name="name">room.feature.list</field>
        <field name="model">hotel.management.room.feature</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_room_feature_form" model="ir.ui.view">
        <field name="name">room.feature.form</field>
        <field name="model">hotel.management.room.feature</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
